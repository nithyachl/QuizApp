<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/title"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:text="Trivia!"
        android:textSize="60dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />


    <TextView
        android:id="@+id/startBox"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:text="Start"
        android:textAlignment="center"
        android:background="#2EFE2E"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814" />

    <TextView
        android:layout_width="380dp"
        android:layout_height="225dp"
        android:text="INSTRUCTIONS: This is a simple game of trivia. Either you get it or you don't. If you get it right, you will get +2. If you get it wrong, you will automatically be taken to the next question. Have Fun!! "
        android:textSize="25dp"
        android:background="#RFESS23"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="106dp" />


</android.support.constraint.ConstraintLayout>